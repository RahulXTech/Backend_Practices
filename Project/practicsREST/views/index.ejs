<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>All Posts — Simple CRUD Page</title>
  <style>
    :root{
      --bg:#0f1724; --card:#0b1220; --muted:#94a3b8; --accent:#7c3aed;
      --glass: rgba(255,255,255,0.04);
      --radius:14px;
      color-scheme: dark;
      font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }
    *{box-sizing:border-box}
    html,body{height:100%;margin:0;background:linear-gradient(180deg,#071024 0%,var(--bg) 100%);color:#e6eef8}
    .wrap{max-width:1100px;margin:36px auto;padding:28px}
    header{display:flex;align-items:center;gap:16px;margin-bottom:20px}
    .logo{width:56px;height:56px;border-radius:12px;background:linear-gradient(135deg,var(--accent),#06b6d4);display:flex;align-items:center;justify-content:center;font-weight:700;box-shadow:0 6px 24px rgba(12,18,30,.6)}
    h1{font-size:20px;margin:0}
    p.lead{color:var(--muted);margin:0;font-size:13px}

    .controls{display:flex;gap:12px;margin-top:18px;align-items:center;flex-wrap:wrap}
    .grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(260px,1fr));gap:18px;margin-top:22px}
    .card{background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));border-radius:var(--radius);overflow:hidden;box-shadow:0 8px 30px rgba(2,6,23,.6);transition:transform .18s ease, box-shadow .18s ease;border:1px solid rgba(255,255,255,0.03)}
    .card:hover{transform:translateY(-6px);box-shadow:0 18px 40px rgba(2,6,23,.7)}

    .media{height:160px;background:#081427;display:block;overflow:hidden}
    .media img{width:100%;height:100%;object-fit:cover;display:block;transition:transform .6s ease}
    .card:hover .media img{transform:scale(1.06)}

    .body{padding:14px}
    .meta{display:flex;align-items:center;gap:10px}
    .avatar{width:40px;height:40px;border-radius:10px;background:linear-gradient(135deg,#3b82f6,#8b5cf6);display:flex;align-items:center;justify-content:center;font-weight:700}
    .user{display:flex;flex-direction:column}
    .user .name{font-weight:600;font-size:14px}
    .user .sub{font-size:12px;color:var(--muted)}
    .id-badge{margin-left:auto;background:rgba(255,255,255,0.04);padding:6px 8px;border-radius:8px;font-size:12px;color:var(--muted)}

    .desc{margin-top:10px;color:#d9e6ff;font-size:14px;line-height:1.4;min-height:48px}
    .actions{display:flex;gap:8px;align-items:center;margin-top:12px}
    .btn{padding:8px 12px;border-radius:10px;border:0;background:linear-gradient(90deg,var(--accent),#06b6d4);cursor:pointer;font-weight:600}
    .ghost{background:transparent;border:1px solid rgba(255,255,255,0.05);padding:8px 10px;border-radius:10px;color:var(--muted);cursor:pointer}

    .crud-form{display:flex;flex-direction:column;gap:10px;margin-bottom:20px}
    .crud-form input, .crud-form textarea{padding:8px;border-radius:8px;border:none;background:var(--glass);color:#e6eef8;resize:none}

    footer{margin-top:28px;color:var(--muted);font-size:13px;text-align:center}
  </style>
</head>
<body>
  <div class="wrap">
    <header>
      <div class="logo">AP</div>
      <div>
        <h1>All Posts CRUD</h1>
        <p class="lead">Add, edit, or remove posts using the simple UI below.</p>
      </div>
    </header>

    <div class="crud-form">
      <input type="text" id="username" placeholder="Username" />
      <textarea id="description" rows="2" placeholder="Description"></textarea>
      <input type="text" id="image" placeholder="Image URL" />
      <button class="btn" id="addPost">Add Post</button>
    </div>

    <main>
        <div id="grid" class="grid">
            <% for(post of posts){ %>
            <!-- Example Post -->
            <article class="card">
          <div class="media"><img src="<%= post.image %>" alt="Beach" /></div>
          <div class="body">
            <div class="meta">
              <div class="avatar">SR</div>
              <div class="user">
                <div class="name"><%= post.username %></div>
                <div class="sub">@sara_rose • Post</div>
              </div>
              <div class="id-badge"><%= post.id %></div>
            </div>
            <div class="desc"><%= post.description %></div>
            <div class="actions">
              <button class="btn editBtn">Edit</button>
              <button class="ghost deleteBtn">Delete</button>
            </div>
          </div>
        </article>
        <%} %>
    </div>
    
    <footer>UI with placeholders for CRUD operations.</footer>
    </main>
  </div>
</body>
</html>
