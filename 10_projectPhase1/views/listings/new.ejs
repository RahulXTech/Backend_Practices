
<% layout('/layouts/boilerplate') %>

<% // ✅ Safely set title so it never throws an error %>
<% const pageTitle = typeof title !== "undefined" ? title : "WanderLust"; %>
<title><%= pageTitle %></title>

<body>
  <form method="POST" action="/listings">
    <h2>Create a New Listing</h2>

    <label for="title">Title:</label><br>
    <input type="text" id="title" name="listing[title]" placeholder="Enter listing title" required><br>

    <label for="description">Description:</label><br>
    <textarea id="description" name="listing[description]" rows="4" cols="40" placeholder="Enter description" required></textarea><br>

    <label for="price">Price (₹):</label><br>
    <input type="number" id="price" name="listing[price]" placeholder="Enter price" required><br>

    <label for="location">Location:</label><br>
    <input type="text" id="location" name="listing[location]" placeholder="Enter location" required><br>

    <label for="country">Country:</label><br>
    <input type="text" id="country" name="listing[country]" placeholder="Enter country" required><br>

    <label for="url">Image URL:</label><br>
    <input type="url" id="url" name="image[url]" placeholder="Enter image URL"><br>

    <button type="submit">Create Listing</button>
  </form>
</body>

