<% layout('/layouts/boilerplate') %>

<% const pageTitle = typeof title !== "undefined" ? title : "WanderLust"; %>
<title><%= pageTitle %></title>

<!-- Add Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<body>
  <div class="container mt-5">
    <h2 class="mb-4">Create a New Listing</h2>

    <form method="POST" action="/listings" class="needs-validation" novalidate>
      
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" class="form-control" id="title" name="listing[title]" placeholder="Enter listing title" required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea class="form-control" id="description" name="listing[description]" rows="4" placeholder="Enter description" required></textarea>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price (â‚¹):</label>
        <input type="number" class="form-control" id="price" name="listing[price]" placeholder="Enter price" required>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input type="text" class="form-control" id="location" name="listing[location]" placeholder="Enter location" required>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country:</label>
        <input type="text" class="form-control" id="country" name="listing[country]" placeholder="Enter country" required>
      </div>

      <div class="mb-3">
        <label for="url" class="form-label">Image URL:</label>
        <input type="url" class="form-control" id="url" name="image[url]" placeholder="Enter image URL">
      </div>

      <button type="submit" class="btn btn-primary">Add Listing</button>
    </form>
  </div>

<!-- Add Bootstrap JS (optional, for components like modals) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
