<% layout('/layouts/boilerplate') %>

<% // âœ… Safely set title so it never throws an error %>
<% const pageTitle = typeof title !== "undefined" ? title : "WanderLust"; %>
<title><%= pageTitle %></title>
  <div class="row row-cols-lg-4 row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListing) { %>
      <a class="listing-link" href="/listing/<%= listing._id %>">
      <div class="card col" style="width: 18rem;">
          <img class="card-img-top" src="<%= listing.image.url %>" alt="Card image cap">
          <div class="card-img-overlay"><div class="card-img-overlay1">Guest favourite</div> </div>
          <div class="card-body">
            <div class="card-text"><%= listing.title %></div>
            <div class="card-text">Location : <%= listing.location %></div>
            <div class="card-text"><%= listing.price %>/Night</div>
          </div>
        </div>
      </a>
        <% } %>
  </div>